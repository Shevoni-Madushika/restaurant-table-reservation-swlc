{
  "name": "TableTop.lk API",
  "version": "1.0.0",
  "description": "Restaurant Booking Platform API endpoints for Mockoon",
  "endpoints": [
    {
      "name": "Get All Restaurants",
      "method": "GET",
      "path": "/api/restaurants",
      "description": "Retrieve all restaurants",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{restaurants}}"
      }
    },
    {
      "name": "Get Restaurant by ID",
      "method": "GET",
      "path": "/api/restaurants/:id",
      "description": "Get restaurant details by ID",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{restaurant}}"
      }
    },
    {
      "name": "Search Restaurants",
      "method": "GET",
      "path": "/api/restaurants/search",
      "description": "Search restaurants with filters",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{filteredRestaurants}}"
      }
    },
    {
      "name": "Text Search Restaurants",
      "method": "GET",
      "path": "/api/restaurants/search/text",
      "description": "Text-based restaurant search",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{searchResults}}"
      }
    },
    {
      "name": "Get Top Rated Restaurants",
      "method": "GET",
      "path": "/api/restaurants/top-rated",
      "description": "Get highest rated restaurants",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{topRatedRestaurants}}"
      }
    },
    {
      "name": "Get Most Booked Restaurants",
      "method": "GET",
      "path": "/api/restaurants/most-booked",
      "description": "Get most popular restaurants",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{mostBookedRestaurants}}"
      }
    },
    {
      "name": "Create Restaurant",
      "method": "POST",
      "path": "/api/restaurants",
      "description": "Create new restaurant (Admin only)",
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{createdRestaurant}}"
      }
    },
    {
      "name": "Update Restaurant",
      "method": "PUT",
      "path": "/api/restaurants/:id",
      "description": "Update restaurant details (Admin only)",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{updatedRestaurant}}"
      }
    },
    {
      "name": "Delete Restaurant",
      "method": "DELETE",
      "path": "/api/restaurants/:id",
      "description": "Delete restaurant (Admin only)",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{\"message\": \"Restaurant deleted successfully\"}"
      }
    },
    {
      "name": "Get All Bookings",
      "method": "GET",
      "path": "/api/bookings",
      "description": "Retrieve all bookings",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{bookings}}"
      }
    },
    {
      "name": "Get User Bookings",
      "method": "GET",
      "path": "/api/bookings/user/:userId",
      "description": "Get bookings for specific user",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{userBookings}}"
      }
    },
    {
      "name": "Get Restaurant Bookings",
      "method": "GET",
      "path": "/api/bookings/restaurant/:restaurantId",
      "description": "Get bookings for specific restaurant",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{restaurantBookings}}"
      }
    },
    {
      "name": "Create Booking",
      "method": "POST",
      "path": "/api/bookings",
      "description": "Create new booking",
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{createdBooking}}"
      }
    },
    {
      "name": "Update Booking Status",
      "method": "PUT",
      "path": "/api/bookings/:bookingId/status",
      "description": "Update booking status",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{updatedBooking}}"
      }
    },
    {
      "name": "Cancel Booking",
      "method": "DELETE",
      "path": "/api/bookings/:bookingId",
      "description": "Cancel booking",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{\"message\": \"Booking cancelled successfully\"}"
      }
    },
    {
      "name": "Check Availability",
      "method": "GET",
      "path": "/api/bookings/availability",
      "description": "Check time slot availability",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "true"
      }
    },
    {
      "name": "Get All Reviews",
      "method": "GET",
      "path": "/api/reviews",
      "description": "Retrieve all reviews",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{reviews}}"
      }
    },
    {
      "name": "Get Restaurant Reviews",
      "method": "GET",
      "path": "/api/reviews/restaurant/:restaurantId",
      "description": "Get reviews for specific restaurant",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{restaurantReviews}}"
      }
    },
    {
      "name": "Get User Reviews",
      "method": "GET",
      "path": "/api/reviews/user/:userId",
      "description": "Get reviews by specific user",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{userReviews}}"
      }
    },
    {
      "name": "Create Review",
      "method": "POST",
      "path": "/api/reviews",
      "description": "Create new review",
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{createdReview}}"
      }
    },
    {
      "name": "Update Review",
      "method": "PUT",
      "path": "/api/reviews/:id",
      "description": "Update review",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{updatedReview}}"
      }
    },
    {
      "name": "Delete Review",
      "method": "DELETE",
      "path": "/api/reviews/:id",
      "description": "Delete review",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{\"message\": \"Review deleted successfully\"}"
      }
    },
    {
      "name": "User Login",
      "method": "POST",
      "path": "/api/auth/login",
      "description": "User authentication",
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{loginResponse}}"
      }
    },
    {
      "name": "User Register",
      "method": "POST",
      "path": "/api/auth/register",
      "description": "User registration",
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": "{{registerResponse}}"
      }
    }
  ]
}
